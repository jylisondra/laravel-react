{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "app/*": ["src/app/*"],
      "routes/*": ["src/app/routes/*"],
      "entities/*": ["src/entities/*"],
      "features/*": ["src/features/*"],
      "pages/*": ["src/pages/*"],
      "shared/*": ["src/shared/*"],
      "widgets/*": ["src/widgets/*"]
    },
    "target": "ES6",
    "lib": ["dom", "es2017"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["vite-plugin-svgr/client"]
  },
  "include": ["src"],
}
